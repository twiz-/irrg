<%= current_user.email %> | <%= link_to "Public View", public_feed_path %><br>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Visible?</th>
	  <th>User Image</th>
	  <th>Comment</th>
	  <th>Product Name</th>
	  <th>Food Image</th>
    </tr>
  </thead>
  <tbody>
	  <% @location.each do |location| %>
		  <% if location.reviews.count >= 1%>
		  	<%= form_tag visible_reviews_path, method: :put do %>

			    <tr>
				<% location.reviews.each do |review| %>		
			      <td><%= check_box_tag "review_ids[]",review.id %> | <%= review.visibility%></td>
				  <td><%=image_tag review.reviewer_image, class: "reviewer-image" %></td>
				  <td>"<%=review.comment %>" <br>-<%=review.email %></td>
				  <td><%= review.product_name.inspect %></td>

			      <td><%= image_tag review.product_image, class: "product_image"%> </td>		      		      
			    </tr>
				<% end %>
			<%= submit_tag "Make ALL Checked Visible", class: "btn btn-success" %>
			<% end %>
		  <% else %>
		  <tr><td>No reviews yet</td></tr>	
		  <% end %>
	  <% end %>	  
  </tbody>
</table>
