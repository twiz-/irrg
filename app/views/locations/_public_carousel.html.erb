<% @public_reviews.each do |feed| %>
	<div class="item">
		<div style="position:relative;">
			<%= image_tag feed.product_image, class: "public-product-image" %><br>
	 		<div class="comments-wrapper">
				<div class="comment-guts row">
					<div class="col-md-2">
						<br>
						<%= image_tag feed.reviewer_image, class: "review-carousel-image" %> <br>
						<span class="review-carousel-name"><%= full_name(feed)%></span>
					</div>
					<div class="col-md-10">
						<br>
					    <h2 class="media-heading"><%= feed.product_name %></h2>
					    <p style="font-size:1.55em;">"<i><%= feed.comment %></i>"</p>
					</div>		
				</div>				
			</div>
		</div>
	</div>
<% end %>