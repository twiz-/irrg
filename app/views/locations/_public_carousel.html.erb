<% @public_reviews.each do |feed| %>
	<div class="item">
		<div style="position:relative;">
			<%= image_tag feed.product_image, class: "public-product-image" %><br>
	 		<div class="comments-wrapper">
				<div class="comment-guts row">
					<div class="media" style="padding:15px;">
					  <a class="pull-left" href="#">
					    <%= image_tag feed.reviewer_image, class: "review-carousel-image" %>
					  </a>
					  <div class="media-body">
					    <h2 class="media-heading"><%= feed.product_name %></h2>
					    <p style="font-size:1.55em;">"<i><%= feed.comment %></i>"</p>
					  </div>
					</div>
					<div class="col-md-3 col-md-offset-5 comment-email">									
						- <%= full_name(feed) %>
					</div>	
				</div>				
			</div>
		</div>
	</div>
<% end %>