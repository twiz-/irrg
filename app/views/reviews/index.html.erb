<h1>Listing reviews</h1>

<table>
  <thead>
    <tr>
      <th>Product image</th>
      <th>Email</th>
      <th>Location</th>
      <th>Comment</th>
      <th>Reviewer image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reviews.each do |review| %>
      <tr>
        <td><%= image_tag review.product_image.to_s %></td>
        <td><%= review.email %></td>
        <td><%= review.location %></td>
        <td><%= review.comment %></td>
        <td><%= image_tag review.reviewer_image.to_s %></td>
        <td><%= link_to 'Show', review %></td>
        <td><%= link_to 'Edit', edit_review_path(review) %></td>
        <td><%= link_to 'Destroy', review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Review', new_review_path %>
